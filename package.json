    "axios": "^1.3.5",
    "body-parser": "^1.20.2",
    "bootstrap": "^5.2.3",
    "cookie-parser": "^1.4.6",
    "eta": "^2.0.1",
    "express": "^4.18.2",
    "express-validator": "^6.15.0",
    "jest-coverage-badges-ts": "^0.1.7",
    "jquery": "^3.6.4",
    "mirador": "^3.3.0",
    "mirador-dl-plugin": "^0.13.0",
    "mirador-image-tools": "^0.11.0",
