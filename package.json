  "description": "The viewer microservice for Multimedia Presentation Service (MPS).",
  "author": "Phil Plencner <philip_plencner@harvard.edu>",
  "main": "app.js",
  "scripts": {
    "start": "node ./bin/www",
    "devstart": "nodemon ./bin/www -L",
    "devserverstart": "DEBUG=mps-viewer:* npm run devstart",
