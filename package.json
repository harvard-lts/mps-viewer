    "test": "./node_modules/.bin/jest",
    "test:watch": "./node_modules/.bin/jest --watchAll",
    "test:coverage": "./node_modules/.bin/jest --coverage",
    "test:badges": "npm run test:coverage  && jest-coverage-badges-ts",
    "test:unit": "./node_modules/.bin/jest --testPathPattern=__tests__/unit",
    "test:integration": "./node_modules/.bin/jest --testPathPattern=__tests__/integration"
  },
  "dependencies": {
    "@harvard-lts/mirador-hide-nav-plugin": "^1.0.0",
    "@harvard-lts/mirador-help-plugin": "^1.0.0",
    "axios": "^0.24.0",
    "body-parser": "^1.19.0",
    "bootstrap": "^4.6.0",
    "cookie-parser": "^1.4.5",
    "eta": "^1.12.3",
    "express": "^4.17.1",
    "express-validator": "^6.13.0",
    "jest-coverage-badges-ts": "^0.1.4",
    "jquery": "^3.6.0",
    "mirador": "^3.2.0",
    "mirador-dl-plugin": "^0.13.0",
    "mirador-image-tools": "^0.11.0",
    "mirador-share-plugin": "^0.11.0",
    "morgan": "^1.10.0",
    "passport": "^0.5.0",
    "passport-local": "^1.0.0",
    "path": "^0.12.7",
    "query-string": "^7.0.1",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "rotating-file-stream": "^3.0.1",
    "serve-favicon": "^2.5.0",
    "url": "^0.11.0",
    "validator": "^13.7.0",
    "webpack": "^5.76.0",
    "webpack-cli": "^4.9.1",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-react": "^7.16.0",
    "babel-loader": "^8.2.3",
    "clean-webpack-plugin": "^4.0.0",
    "jest": "^27.4.7",
    "nodemon": "^2.0.13",
    "supertest": "^6.2.1"
  }
